<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T1_DSM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
      
        <item name="colorPrimary">@color/black</item><!-- Cor do action bar e dos botões-->
        <item name="colorOnPrimary">@color/white</item><!--Texto dos botões -->
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- SNACKBAR Custom -->
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarButtonStyle">@style/MySnackbarTextButtonStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackbarTextViewStyle</item>
    </style>

    <style name="Theme.T1_DSM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.T1_DSM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.T1_DSM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.T1_DSM.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.T1_DSM.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.T1_DSM.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--SNACKBAR Custons -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/white</item>
        <item name="animationMode">slide</item>
    </style>
    <style name="MySnackbarTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/back_dark_purple</item>
    </style>
    <style name="MySnackbarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>